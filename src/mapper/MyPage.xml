<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


  <mapper namespace="dao.MyPageDao">

	<!-- 기본정보 맵핑 -->
	<select id="SerchByNo" resultType="dto.Member" >
		SELECT ID_MEM, PWD_MEM, NAME_MEM, INTRO_MEM FROM MEMBER
	</select>
	<!-- PWD 수정 -->
	<update id="ResetPwd" parameterType="String">
		UPDATE MEMBER SET PWD_MEM= #{PWD_MEM} WHERE NO_MEM = #{NO_MEM} 
	</update>
	<!-- 탈퇴 -->
	<delete id="WithDraw" parameterType="int">
		DELETE FROM MEMBER WHERE NO_MEM = #{NO_MEM}
	</delete>

</mapper> 